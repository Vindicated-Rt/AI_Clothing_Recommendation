<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InfoActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:maxWidth="250sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/info_gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/info_gender_tv_text"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_faceShape_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/info_faceShape_tv_text"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/info_gender_tv"
        app:layout_constraintStart_toStartOf="@+id/info_gender_tv"
        app:layout_constraintTop_toBottomOf="@+id/info_gender_tv" />

    <TextView
        android:id="@+id/info_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/info_age_tv_text"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/info_faceShape_tv"
        app:layout_constraintStart_toStartOf="@+id/info_faceShape_tv"
        app:layout_constraintTop_toBottomOf="@+id/info_faceShape_tv" />

    <EditText
        android:id="@+id/info_gender_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toBottomOf="@+id/info_gender_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/info_gender_tv"
        app:layout_constraintTop_toTopOf="@+id/info_gender_tv"
        tools:ignore="LabelFor,TextFields"
        tools:targetApi="o"
        android:autofillHints="textPassword"/>

    <EditText
        android:id="@+id/info_faceShape_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:autofillHints="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/info_faceShape_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/info_faceShape_tv"
        app:layout_constraintTop_toTopOf="@+id/info_faceShape_tv"
        tools:ignore="LabelFor,TextFields"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/info_age_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:autofillHints="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/info_age_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/info_age_tv"
        app:layout_constraintTop_toTopOf="@+id/info_age_tv"
        tools:ignore="LabelFor,TextFields"
        tools:targetApi="o" />

    <ImageButton
        android:id="@+id/info_post_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@mipmap/post_btn_src"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        tools:ignore="ContentDescription" />


</android.support.constraint.ConstraintLayout>